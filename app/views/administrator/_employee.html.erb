<div class="panel header-panel flow-text z-depth-3">
  <div id="title">All Employees</div>
  </div>
<div class="full-height scroll-bar">
  <table class="striped">
    <thead>
      <tr>
          <th></th>
          <th>Name</th>
          <th>Phone</th>
          <th>Email</th>
          <th>Date joined</th>
          <th></th>
      </tr>
    </thead>

    <tbody>
      <% @employees.each do |employee| %>
        <tr>
          <td><%= link_to "#{employee.ename}" , employee_path(employee.id)%></td>
          <td><%= link_to "#{employee.ephone}" , employee_path(employee.id)%></td>
          <td><%= employee.email %></td>
          <td><%= employee.created_at.strftime("%Y - %e - %d") %></td>
          <td>
            <%= button_to employee_path(employee.id), :class => "clear-button", method: :delete, data: { :confirm=>'You sure?' } do %>
              <i class="material-icons">clear</i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>